echo "Corosync Cluster Engine LOC"
echo -n "exec LOC    "
find exec -name *.[ch] -exec cat {} \; | wc -l

echo -n "lib LOC     "
find lib -name *.[ch] -exec cat {} \; | wc -l

echo -n "include LOC "
find include -name *.[ch] -exec cat {} \; | wc -l

echo -n "total LOC   "
find . -name *.[ch] -exec cat {} \; | wc -l
